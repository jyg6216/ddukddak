			},
			success: function(rst){
				console.log(rst);
				$.each(rst, function(index,vo){
					let str = "";
					$.each(vo, function(index, column){
						if(index == 'paName'){
							str += (column);
						}
						if(index == 'paReg'){
							str += (column + ',');
						}
					})
					dataList.push(str);
				})
				updateResultTable(dataList, 100);
			},
