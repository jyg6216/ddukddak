					</td>
					<td class="td-padding">
						<c:choose>
					        <c:when test="${fn:substring(patient.paReg, 0, 1) gt 0}">
					        19<c:out value="${fn:substring(patient.paReg, 0, 2)}">
					        </c:out></c:when>
					        <c:otherwise>
					        20<c:out value="${fn:substring(patient.paReg, 0, 2)}">
					        </c:out></c:otherwise>
						</c:choose>
						-${fn:substring(patient.paReg, 2, 4)}-${fn:substring(patient.paReg, 4, 6)}
					</td>
