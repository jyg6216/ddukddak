package kr.or.dduk.ams.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;

import kr.or.dduk.common.service.CommonService;
import kr.or.dduk.vo.PatientVO;
import lombok.extern.slf4j.Slf4j;

@Slf4j
@RequestMapping("/ams")
@Controller
public class receiptContorller {

	//환자 리스트를 위해 쓰는 커먼서비스
	@Autowired
	CommonService commonService;
	
	/**
	 * 접수 페이지
	 * @param model 환자 리스트
	 * @return rcpt.jsp
	 */
	@GetMapping("/rcpt")
	public String receipt(Model model) {
		List<PatientVO> patientVOList = this.commonService.list();
		log.info("patientVOList: " + patientVOList);
		
		model.addAttribute("patientVOList",patientVOList);
		
		return "ams/rcpt";
	}
	
	@GetMapping("/test")
	public String test() {
		return "ams/test";
	}
}
